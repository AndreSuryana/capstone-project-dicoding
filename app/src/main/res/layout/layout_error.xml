<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowColor"
    android:visibility="gone">

    <TextView
        android:id="@+id/tvFailed"
        style="@style/Typography.Body1"
        android:layout_gravity="center"
        android:drawablePadding="4dp"
        android:text="@string/error"
        android:textAlignment="center"
        app:drawableTopCompat="@drawable/ic_not_found"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.479" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_retry"
        style="@style/Button.Gray"
        android:layout_marginStart="160dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="160dp"
        android:text="@string/retry"
        android:textAppearance="@style/Typography.Button"
        app:layout_constraintEnd_toEndOf="@+id/tvFailed"
        app:layout_constraintStart_toStartOf="@+id/tvFailed"
        app:layout_constraintTop_toBottomOf="@+id/tvFailed" />

</androidx.constraintlayout.widget.ConstraintLayout>